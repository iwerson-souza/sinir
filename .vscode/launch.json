{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Resilead (.NET)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-resilead",
      "program": "${workspaceFolder}/csharp-resilead/bin/Debug/net8.0/Resilead.Integration.Local.dll",
      "args": [
        "${input:resileadCommand}"
      ],
      "cwd": "${workspaceFolder}/csharp-resilead",
      "console": "integratedTerminal",
      "stopAtEntry": false
    },
    {
      "name": "Sinir (.NET)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-sinir",
      "program": "${workspaceFolder}/csharp-sinir/bin/Debug/net8.0/Sinir.Integration.Local.dll",
      "args": [
        "${input:sinirMode}"
      ],
      "cwd": "${workspaceFolder}/csharp-sinir",
      "console": "integratedTerminal",
      "stopAtEntry": false
    }
  ],
  "inputs": [
    {
      "id": "resileadCommand",
      "type": "pickString",
      "description": "Selecionar comando Resilead",
      "options": [
        { "label": "ref-load", "value": "ref-load" },
        { "label": "stakeholder", "value": "stakeholder" },
        { "label": "mtr", "value": "mtr" }
      ],
      "default": "ref-load"
    },
    {
      "id": "sinirMode",
      "type": "pickString",
      "description": "Selecionar modo do Sinir",
      "options": [
        { "label": "run", "value": "run" },
        { "label": "setup", "value": "setup" },
        { "label": "process", "value": "process" },
        { "label": "address", "value": "address" }
      ],
      "default": "run"
    }
  ]
}
